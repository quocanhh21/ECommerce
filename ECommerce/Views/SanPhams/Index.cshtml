@model IEnumerable<ECommerce.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    td.a {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width:100px;
    }
</style>

<div class="main-content-container container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header row no-gutters py-4">
        <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
            <span class="text-uppercase page-subtitle">Overview</span>
            <h3 class="page-title">Product Information</h3>
        </div>
    </div>
    <!-- End Page Header -->
    <!-- Default Light Table -->
    <div class="row">
        <div class="col">
            <div class="card card-small mb-4">
                <div class="card-header border-bottom">
                    <a href="@Url.Action("Create", "SanPhams")" class="mb-2 btn btn-outline-primary mr-2" style="font-size:16px;font-weight:500"><i class="material-icons">add</i>  Create New</a>
                </div>
                <div class="card-body p-0 pb-3 text-center">
                    <table class="table mb-0" style="text-align:center">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col" class="border-0">ID</th>
                                <th scope="col" class="border-0">@Html.DisplayNameFor(model => model.DanhMucs.TenDanhMuc)</th>
                                <th scope="col" class="border-0">@Html.DisplayNameFor(model => model.TenSanPham)</th>
                                <th scope="col" class="border-0">@Html.DisplayNameFor(model => model.GiaBan)</th>
                                <th scope="col" class="border-0">@Html.DisplayNameFor(model => model.SoLuong)</th>
                                <th scope="col" class="border-0">@Html.DisplayNameFor(model => model.TinhTrang)</th>
                                <th scope="col" class="border-0">@Html.DisplayNameFor(model => model.MoTa)</th>
                                <th scope="col" class="border-0">@Html.DisplayNameFor(model => model.Hinh)</th>
                                <th scope="col" class="border-0"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaSanPham)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DanhMucs.TenDanhMuc)
                                </td>
                                <td class="a">
                                    @Html.DisplayFor(modelItem => item.TenSanPham)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GiaBan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TinhTrang)
                                </td>
                                <td class="a">
                                    @Html.DisplayFor(modelItem => item.MoTa)
                                </td>
                                <td style="max-width:100px">
                                    <img src=" @Html.DisplayFor(modelItem => item.Hinh)" alt="product image" style="width:50%;max-height:20%" />
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.MaSanPham })" class="mb-2 btn btn-sm btn-info mr-1"><i class="material-icons">edit</i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- End Default Light Table -->
</div>





