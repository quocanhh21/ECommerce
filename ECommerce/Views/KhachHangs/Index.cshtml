@model IEnumerable<ECommerce.Models.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <style>
        td.a {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 100px;
        }
    </style>
</head>
<div class="main-content-container container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header row no-gutters py-4">
        <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
            <span class="text-uppercase page-subtitle">Overview</span>
            <h3 class="page-title">Customer Information</h3>
        </div>
    </div>
    <!-- End Page Header -->
    <!-- Default Light Table -->
    <div class="row">
        <div class="col">
            <div class="card card-small mb-4">
                <div class="card-header border-bottom">
                    <a href="@Url.Action("Create", "KhachHangs")" class="mb-2 btn btn-outline-primary mr-2" style="font-size:16px;font-weight:500"><i class="material-icons">add</i>  Create New</a>
                </div>
                <div class="card-body p-0 pb-3 text-center">
                    <table class="table mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col" class="border-0">ID</th>
                                <th scope="col" class="border-0">@Html.DisplayNameFor(model => model.Quyen.TenQuyen)</th>
                                @*<th scope="col" class="border-0">@Html.DisplayNameFor(model => model.LoaiKhachHang.MaLoaiKH)</th>*@
                                <th scope="col" class="border-0">@Html.DisplayNameFor(model => model.TenKH)</th>
                                @*<th scope="col" class="border-0">@Html.DisplayNameFor(model => model.NgaySinh)</th>*@
                                <th scope="col" class="border-0">@Html.DisplayNameFor(model => model.DiaChi)</th>
                                <th scope="col" class="border-0">@Html.DisplayNameFor(model => model.SDT)</th>
                                <th scope="col" class="border-0">@Html.DisplayNameFor(model => model.Email)</th>
                                <th scope="col" class="border-0">@Html.DisplayNameFor(model => model.UserName)</th>
                                <th scope="col" class="border-0">@Html.DisplayNameFor(model => model.DiemTichLuy)</th>
                                <th scope="col" class="border-0"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaKH)
                                </td>
                                <td class="a">
                                    @Html.DisplayFor(modelItem => item.Quyen.TenQuyen)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TenKH)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.NgaySinh)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiaChi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SDT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiemTichLuy)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.MaKH })" class="mb-2 btn btn-sm btn-info mr-1"><i class="material-icons">edit</i></a>
                                    <a href="@Url.Action("Delete", new { id = item.MaKH })" class="mb-2 btn btn-sm btn-danger mr-1"><i class="material-icons">delete</i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- End Default Light Table -->
</div>



